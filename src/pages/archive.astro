---
import Container from "~/components/common/container.astro";
import Layout from "~/layouts/Layout.astro";
import { basehub } from "~/lib/basehub";
import Link from "~/components/common/link.astro";
import { ArrowRight } from "lucide-react";

const {
  archive: {
    links: { items: links },
  },
} = await basehub.query({
  archive: {
    links: {
      __args: { orderBy: "_sys_createdAt__DESC" },
      items: { _id: true, _title: true, link: true },
    },
  },
});

const miscLinks = [{ title: "graphics", href: "/archive/gfx" }];
---

<Layout
  content={{
    title: "archive | advtszn",
    description:
      "old graphics, experiments, and little corners of the web that stuck with me.",
  }}
>
  <main>
    <Container>
      <div class="space-y-4 md:space-y-6">
        <h1 class="font-serif text-4xl italic md:text-6xl">archive</h1>

        <div
          class="flex flex-col gap-y-12 lg:flex-row lg:justify-between lg:gap-x-12 lg:gap-y-0"
        >
          <div class="space-y-4 lg:max-w-[45%]">
            <h2 class="font-serif text-2xl lg:text-4xl">content i like</h2>
            <p class="text-muted-foreground text-lg">
              list of links from the internet that i like/appreciate (yea i
              copied this from <Link href="https://farza.com/content"
                >farza</Link
              >). i'll try to keep this updated
            </p>
            <ol class="list-inside list-decimal space-y-1.5">
              {
                links.map(({ link, _id, _title }) => (
                  <li class="text-lg font-light">
                    <a
                      target="_blank"
                      class="underline underline-offset-4"
                      href={link}
                    >
                      {_title}
                    </a>
                  </li>
                ))
              }
            </ol>
          </div>

          <div class="space-y-4 lg:max-w-[45%]">
            <h2 class="font-serif text-2xl lg:text-4xl">misc</h2>
            <p class="text-muted-foreground text-lg">
              random things that don't fit anywhere else &mdash; old projects,
              experiments, and creative bits
            </p>
            <ul class="space-y-3">
              {
                miscLinks.map(({ title, href }) => (
                  <li class="text-lg font-light">
                    <a
                      class="group inline-flex items-center underline underline-offset-4"
                      href={href}
                    >
                      <ArrowRight
                        className="mr-1.5 group-hover:mr-2 transition-all"
                        strokeWidth={3}
                        size={16}
                      />
                      {title}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </Container>
  </main>
</Layout>
